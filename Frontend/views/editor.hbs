<div class="article-management-editor">
    <div class="container">
        <h1>Article Management - Editor</h1>

        <!-- Article list -->
        <section class="article-list">
            <h2>Articles Pending Review</h2>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Summary</th>
                        <th>Category</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Sample data -->
                    <tr>
                        <td>Artificial Intelligence Applications in Healthcare</td>
                        <td>An article about how AI is revolutionizing the healthcare industry...</td>
                        <td>Technology</td>
                        <td>
                            <button onclick="showEditModal('Artificial Intelligence Applications in Healthcare')">Approve</button>
                            <button onclick="showRejectModal('Artificial Intelligence Applications in Healthcare')">Reject</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Global Economic Situation 2024</td>
                        <td>Major economic trends in 2024...</td>
                        <td>Economy</td>
                        <td>
                            <button onclick="showEditModal('Global Economic Situation 2024')">Approve</button>
                            <button onclick="showRejectModal('Global Economic Situation 2024')">Reject</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Highlighting Major Sports Events</td>
                        <td>A roundup of the most anticipated sports events...</td>
                        <td>Sports</td>
                        <td>
                            <button onclick="showEditModal('Highlighting Major Sports Events')">Approve</button>
                            <button onclick="showRejectModal('Highlighting Major Sports Events')">Reject</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Environmental Challenges and Climate Change</td>
                        <td>The global environmental issues affecting the world...</td>
                        <td>Environment</td>
                        <td>
                            <button onclick="showEditModal('Environmental Challenges and Climate Change')">Approve</button>
                            <button onclick="showRejectModal('Environmental Challenges and Climate Change')">Reject</button>
                        </td>
                    </tr>
                    <tr>
                        <td>New Technology Inventions in 2024</td>
                        <td>Discover the technological inventions that are changing lives...</td>
                        <td>Technology</td>
                        <td>
                            <button onclick="showEditModal('New Technology Inventions in 2024')">Approve</button>
                            <button onclick="showRejectModal('New Technology Inventions in 2024')">Reject</button>
                        </td>
                    </tr>
                    <tr>
                        <td>The Reality of Education in Remote Areas</td>
                        <td>Evaluating the quality of education in remote and difficult areas...</td>
                        <td>Education</td>
                        <td>
                            <button onclick="showEditModal('The Reality of Education in Remote Areas')">Approve</button>
                            <button onclick="showRejectModal('The Reality of Education in Remote Areas')">Reject</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>

        <!-- Modal: Approve article -->
        <div id="editModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal('editModal')">&times;</span>
                <h2>Approve Article</h2>
                <form id="approveForm">
                    <label for="editCategory">Category:</label>
                    <select id="editCategory" name="editCategory" required>
                        <option value="tech">Technology</option>
                        <option value="economy">Economy</option>
                        <option value="sports">Sports</option>
                        <option value="environment">Environment</option>
                        <option value="education">Education</option>
                    </select><br><br>

                    <label for="editTags">Tags:</label>
                    <input type="text" id="editTags" name="editTags" placeholder="Tag the article"><br><br>

                    <label for="publishDate">Publish Date:</label>
                    <input type="datetime-local" id="publishDate" name="publishDate" required><br><br>

                    <button type="submit">Approve Article</button>
                </form>
            </div>
        </div>

        <!-- Modal: Reject article -->
        <div id="rejectModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal('rejectModal')">&times;</span>
                <h2>Reject Article</h2>
                <form id="rejectForm">
                    <label for="rejectReason">Reason for Rejection:</label>
                    <textarea id="rejectReason" name="rejectReason" required placeholder="Enter the reason for rejection..."></textarea><br><br>
                    <button type="submit">Submit Reason</button>
                </form>
            </div>
        </div>
    </div>
</div>
