<h2 class="carousel-title" style="text-align: center">Top 10 Newest News of All Categories</h2>
<div class="owl-carousel owl-theme">
  {{#each newestArticles as |article|}}
  
  <div class="item">
    <article>
      <a href="">
        <img src="{{article.image_url.[0]}}" alt="{{article.title}}">
      </a>
      <div>
        <h3>
          {{article.title}} 
        </h3>
        <p>Category: {{this.category.name}}</p>
       <p class="text-body-secondary">Tags: 
          {{#each article.tags as |tag|}}
            <a>{{tag.name}}</a>
          {{/each}}
        </p>
        <p class="text-body-secondary">{{article.updatedAt}}</p>
         <p>Views: {{this.views}}</p>
        <a href="/">Read More</a>
      </div>
    </article>
  </div>
  {{/each}}
</div>

