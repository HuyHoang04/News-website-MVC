<div class="admin-dashboard">
    <header>
        <h1>Administrator Dashboard</h1>
    </header>
    <main>
        <section id="category">
            <h2>Manage Categories</h2>
            <button>Add Category</button>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each allCategory}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.description}}</td>
                        <td>
                            <button>View</button>
                            <button>Edit</button>
                            <button>Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
        <section id="tag">
            <h2>Manage Tags</h2>
            <button>Add Tag</button>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each allTags}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>
                            <button>Edit</button>
                            <button>Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
        <section id="articles">
            <h2>Manage Articles</h2>
            <button>Add Article</button>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each getPendingArticles}}
                    <tr>

                        <td>{{this.title}}</td>
                        <td>{{this.status}}</td>
                        <td>
                            <button>View</button>
                            <button>Edit</button>
                            <button>Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
        <section id="users">
            <h2>Manage Users</h2>
            <button>Add User</button>
            <table>
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Full Name</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each getAllUsers}}
                    <tr>
                        <td>{{this.username}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.full_name}}</td>
                        <td>{{this.role}}</td>
                        <td>
                            <button>Edit</button>
                            <button>Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
    </main>
</div>